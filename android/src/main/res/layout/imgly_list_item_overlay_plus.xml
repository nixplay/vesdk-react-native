<ly.img.android.pesdk.ui.widgets.AutoRotateLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/contentHolder"
	style="?attr/Imgly.PESDK.Editor.Panel.Overlay.OverlayItem">
	<ly.img.android.pesdk.ui.widgets.ImageSourceView
		android:id="@+id/image"
		style="?attr/Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.Icon"/>
	<ly.img.android.pesdk.ui.widgets.ImageSourceView
		android:id="@+id/selected_overlay"
		app:src="@drawable/imgly_item_selected_overlay_dark"
		style="?attr/Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.Overlay"/>
	<ly.img.android.pesdk.ui.widgets.ImageSourceView
		android:id="@+id/selected_shuffle"
		app:src="@drawable/imgly_icon_shuffle_light"
		style="?attr/Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.Overlay.Icon"/>
	<TextView
		android:id="@+id/label"
		style="?attr/Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.Label"/>
	<View
		style="?attr/Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.Border"/>
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/nixPlusText"
		android:layout_width="24dp"
		android:layout_height="12dp"
		android:layout_margin="4dp"
		android:scaleType="fitXY"
		android:layout_alignParentEnd="true"
		android:src="@drawable/ic_plus"/>
</ly.img.android.pesdk.ui.widgets.AutoRotateLayout>
